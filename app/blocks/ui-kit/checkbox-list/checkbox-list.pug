include ../checkbox/checkbox
mixin checkboxList(title, id)
  .checkbox-list(id=id)
    .checkbox-list__title= title
    .checkbox-list__body 
      +checkbox("Завтрак", "breakfast")
      +checkbox("Письменный стол", "desk")
      +checkbox("Стул для кормления", "feeding-chair")
      +checkbox("Кроватка", "crib")
      +checkbox("Телевизор", "television")
      +checkbox("Шампунь", "shampoo")
